@model IList<RinDate.Models.UserDto>


@if (Model.Any())
{
<div class="row mt-3">
    @foreach (var item in Model)
    {  
    <div class="col-md-3">
        <div class="card mb-2" style="width: 15rem;">
            @if (item.ImageCoverUrl != null)
            {
                <img class="card-img-top" src="@item.ImageCoverUrl" alt="Card image cap">
            }
            else
            {
                <img class="card-img-top" src="/images/default-image.png" alt="Card image cap">
            }
        <div class="card-body">
            @if (item.Age != null || item.Age != 0)
            {
                <h5 class="card-title">@String.Concat(item.UserName, ", ", item.Age)</h5>
            }
            else
            {
                <h5 class="card-title">@item.UserName</h5>
            }

            <a asp-controller="User" asp-action="Index" asp-route-id="@item.UserId" class="btn btn-primary">Go somewhere</a>
        </div>
        </div>
    </div>
     }
</div>
 }
 else
 {
    <h1>Looks like here is no users!</h1>
 }

 
    
